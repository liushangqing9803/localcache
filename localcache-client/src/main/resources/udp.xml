<config xmlns="urn:org:jgroups"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:org:jgroups http://www.jgroups.org/schema/JGroups-4.2.xsd">
    <UDP
            mcast_port="45566"
            ip_ttl="2"
            mcast_send_buf_size="64000"
            mcast_recv_buf_size="64000"
            ucast_send_buf_size="64000"
            ucast_recv_buf_size="64000"
            max_bundle_size="64000"
            max_bundle_timeout="30"
            enable_diagnostics="false"
            loopback="true"
            bind_addr="${jgroups.bind_addr:127.0.0.1}"
            mcast_addr="230.0.0.1"
            tos="8"/>
</config>
